.history
    display: flex
    align-items: flex-start
    margin: 20px auto 0
    width: 960px
    height: 640px
    background-image: url('./history.jpg')
    background-repeat: no-repeat
    background-size: cover
    font-family: Arial, sans-serif
    font-size: 13px

    &__model
        overflow: auto

        &:first-child ^[0]__year:first-child
            border-right: none

            &::after
                border-right: 1px solid
                height: 10px
                vertical-align: bottom

    &__time-line
        margin: 20px 10px 0
        padding: 16px 20px
        width: 390px
        background-color: rgba(255, 255, 255, .9)
        flex-shrink: 0

    &__header
        margin: 20px 10px 0
        font-size: 30px
        color: #fff
        text-shadow: 0 1px 1px #000

    &__years
        float: left
        margin-right: 18px
        color: #b2b2b2
        line-height: 20px

    &__year
        border-right: 1px solid #000

        &:first-child
            color: #000

            &::after
                content: ''
                border-top: 1px solid
                width: 13px
                vertical-align: middle
                display: inline-block
                margin-left: 7px

    &__title
        font-size: 16px
        color: #b80005
        text-decoration: none

        &:hover
            text-decoration: underline

    &__description
        margin-top: 2px
