.footer
    margin-top: 40px
    padding-top: 40px
    background-color: #e6e6e6
    display: block
    font-family: Arial, sans-serif
    font-size: 16px

    &__inner
        margin: 0 auto
        width: 960px

    &__sections
        display: flex
        justify-content: space-between

    &__copyright
        margin-top: 40px
        height: 55px
        border-top: 1px solid #ccc
        display: flex
        align-items: center
        justify-content: flex-end

    &__title
        font-weight: bold

    &__links
        margin: 0
        padding-left: 10px

        & > li
            display: block
            margin-top: 16px

    &__vk
        width: 30px
        height: @width
        background-color: #4d75a3
        text-align: center
        line-height: @height
        border-radius: 4px
        color: #fff
